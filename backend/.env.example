# Backend Environment Variables Template
# Copy this file to .env and fill in your actual values

# Server Configuration
PORT=3001
HOST=0.0.0.0
NODE_ENV=production

# Database Configuration
# For Render: Add PostgreSQL add-on and use the internal connection string
# Or use external provider like Neon, Supabase, or Railway
DATABASE_URL=postgresql://user:password@host:port/database

# Security
JWT_SECRET=your-secret-key-here
# API_KEY=optional-api-key

# Rate Limiting
RATE_LIMIT_MAX=100
RATE_LIMIT_WINDOW=60000

# CORS Configuration
# Set this to your Vercel frontend URL after deployment
# Comma-separated list for multiple origins
CORS_ORIGIN=http://localhost:3000,https://your-app.vercel.app

# Logging
# Options: error, warn, info, debug
LOG_LEVEL=info
